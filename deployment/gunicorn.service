[Unit]
Description=Yeling AI backend (Gunicorn Uvicorn workers)
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/yeling-ai
Environment=PATH=/opt/yeling-ai/venv/bin
ExecStart=/opt/yeling-ai/venv/bin/gunicorn -k uvicorn.workers.UvicornWorker ai.server_fastapi:app -b 127.0.0.1:5000 --workers 2
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
